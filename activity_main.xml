<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#84fab0"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>
    <androidx.cardview.widget.CardView

        android:layout_width="400dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#f00"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fire_name"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="Fire : "
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/fire_value"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="101dp"
                android:layout_marginRight="101dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="Fire Value"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="400dp"
        android:layout_height="100dp"
       app:cardBackgroundColor="#0ff"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/gas_name"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="Gas: "
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/gas_value"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="101dp"
                android:layout_marginRight="101dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="Gas Value"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="400dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#f00"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/heat_name"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="Heat: "
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/heat_value"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="101dp"
                android:layout_marginRight="101dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="Heat Value"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="400dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#0ff"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/humidity_name"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="Humidity: "
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/humidity_value"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="101dp"
                android:layout_marginRight="101dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="Gas Value"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="400dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#f00"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/motion_name"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:text="Motion: "
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/motion_value"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="101dp"
                android:layout_marginRight="101dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:text="Gas Value"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        android:layout_width="400dp"
        android:layout_height="100dp"
        app:cardBackgroundColor="#0ff"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/temp_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Temperature: "
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/temp_value"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="101dp"
                android:layout_marginRight="101dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="14dp"
                android:text="temp"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="30sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:background="#ff0"
                android:onClick="maps"
                android:text="Escape Plan"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />
        </RelativeLayout>

</LinearLayout>